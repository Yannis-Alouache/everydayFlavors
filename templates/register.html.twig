{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="bg-gray-50">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900">
          <img class="w-8 h-8 mr-2" src={{asset("images/logo.png")}} alt="logo">
          EverydayFlavor    
      </a>
      <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
                  Créer un compte
              </h1>
            {% if not registrationForm.vars.valid %}
                {% for child in registrationForm.children %}
                    {%for error in child.vars.errors%}
                        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
                            {{error.message}}
                        </div>
                    {%endfor%}
                {%endfor%}
            {%endif%}
              <form class="space-y-4 md:space-y-6" action="/inscription" method="POST">
                  <div class="my-custom-class-for-errors">
                    {{ form_errors(registrationForm) }}
                  </div>
                  <div>
                      <label for="email" class="block mb-2 text-sm font-medium text-gray-900">E-mail</label>
                      <input
                            name="{{ field_name(registrationForm.email) }}"
                            value="{{ field_value(registrationForm.email) }}"
                            class="bg-gray-50 mb-4 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
                        >
                  </div>
                  <div>
                      <label for="password" class="block mb-2 text-sm font-medium text-gray-900">Mot de passe</label>
                      <input
                            type="password"
                            name="{{ field_name(registrationForm.plainPassword) }}"
                            value="{{ field_value(registrationForm.plainPassword) }}"
                            class="bg-gray-50 border border-gray-300 text-gray-900 mb-4 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
                        >
                  </div>
                <div class="flex items-center mb-4">
                    <input
                        name="{{ field_name(registrationForm.agreeTerms) }}"
                        type="checkbox"
                        value=""
                        class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                        required    
                    >
                    <label for="default-checkbox" class="ms-2 text-sm font-medium text-gray-900">Accepter vous les règles du site ?</label>
                </div>
                  <button type="submit" class="mb-3 w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-blue-700">Je me lance !</button>
                  <input
                    type="hidden"
                    name="{{ field_name(registrationForm._token) }}"
                    value="{{ field_value(registrationForm._token) }}"
                  >
                  <p class="text-sm font-light text-gray-500">
                      Déjà un compte ? <a href="#" class="font-medium text-primary-600 hover:underline">Connectez-vous</a>
                  </p>
              </form>
              {{ form_end(registrationForm) }}
          </div>
      </div>
  </div>
</section>
{% endblock %}